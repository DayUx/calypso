#:import ScanScreen ScanScreen


Screen:
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            Screen:
                name: 'ScanScreen'
                BoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title: 'Scan'
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]
                        elevation:0
                    ScanScreen:
            Screen:
                name: 'StorageScreen'
                BoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title: 'Storage'
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]
                        elevation:0
                    Widget:
        MDNavigationDrawer:
            orientation: "vertical"
            padding: "8dp"
            spacing: "8dp"
            id: nav_drawer
            radius: (0, 5, 5, 0)
            AnchorLayout:
                anchor_x: "center"
                size_hint_y: None
                height: avatar.height
                Image:
                    id: avatar
                    size_hint: None, None
#                    size: "56dp", "56dp"
                    source: "logo.png"
                    padding: "8dp"
            MDLabel:
                halign: "center"
                text: "SUBAPP"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]
            ScrollView:
                MDList:
                    id: md_list
                    MDList:
                        OneLineIconListItem:
                            text: "Scan"
                            on_release:
                                screen_manager.current = 'ScanScreen'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "camera"
                        OneLineIconListItem:
                            text: "Storage"
                            on_release:
                                screen_manager.current = 'StorageScreen'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "sd"